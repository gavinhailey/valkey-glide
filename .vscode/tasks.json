{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "java-build-client",
            "command": "./gradlew",
            "type": "shell",
            "args": [":client:compileJava"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/java"
            },
            "problemMatcher": "$gradle",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "java-build-all",
            "command": "./gradlew",
            "type": "shell",
            "args": ["build"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/java"
            },
            "problemMatcher": "$gradle",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "java-test-compile",
            "command": "./gradlew",
            "type": "shell",
            "args": [":integTest:compileTestJava", "--continue"],
            "group": "test",
            "options": {
                "cwd": "${workspaceFolder}/java"
            },
            "problemMatcher": "$gradle",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "java-clean",
            "command": "./gradlew",
            "type": "shell",
            "args": ["clean"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/java"
            },
            "problemMatcher": "$gradle"
        },
        {
            "label": "java-check-errors",
            "command": "./gradlew",
            "type": "shell",
            "args": [":integTest:compileTestJava", "--continue"],
            "group": "test",
            "options": {
                "cwd": "${workspaceFolder}/java"
            },
            "problemMatcher": "$gradle",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "csharp-build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/csharp/tests/tests.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}
